GRAPHQL http://localhost:3000/graphql

mutation CreateCoffee {
  createCoffee(input: {
    name: "Coffee #2",
    brand: "Buddybrew",
    flavors: ["chocolate", "vanilla2"]
  }) {
    id,
    name,
    brand,
    flavors {
        name
    }
  }
}

