GRAPHQL http://localhost:3000/graphql

query  Coffees {
  coffees {
    id
    name
    flavors {
       id
       name
    }
    createdAt
  }
}

###
GRAPHQL http://localhost:3000/graphql

query  GetCoffee($coffeeID: ID!) {
  coffee(id: $coffeeID) {
    id
    name
    flavors {
        id
        name
    }
    createdAt
  }
}

{
  "coffeeID": 10
}

